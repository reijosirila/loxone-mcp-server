{
  "name": "@reijosirila/loxone-mcp-server",
  "version": "0.0.7",
  "description": "MCP server for Loxone home automation",
  "main": "dist/stdio-server.js",
  "bin": {
    "loxone-mcp-server": "./dist/server.js"
  },
  "type": "module",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "start:stdio": "MCP_TRANSPORT=stdio node dist/server.js",
    "start:http": "MCP_TRANSPORT=http node dist/server.js",
    "dev": "LOG_LEVEL=2 nodemon --exec \"node --import ./nodemon.mjs\" --ext ts --watch src src/server.ts",
    "dev:http": "MCP_TRANSPORT=http LOG_LEVEL=2 nodemon --exec \"node --import ./nodemon.mjs\" --ext ts --watch src src/server.ts",
    "inspect": "MCP_TRANSPORT=stdio npx @modelcontextprotocol/inspector node --import ./nodemon.mjs src/server.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:watch": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
    "test:coverage": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage"
  },
  "keywords": [
    "mcp",
    "loxone",
    "home-automation",
    "LLM",
    "ChatGPT",
    "claude",
    "gemini"
  ],
  "author": "Reijo Sirila <reijo@sirila.ee>",
  "license": "AGPL-3.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "dayjs": "^1.11.18",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "loxone-ts-api": "^1.3.2",
    "reflect-metadata": "^0.2.2",
    "sprintf-js": "^1.1.3",
    "tsyringe": "^4.10.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.6.0",
    "@types/sprintf-js": "^1.1.4",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=22"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reijosirila/loxone-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/reijosirila/loxone-mcp-server/issues"
  },
  "homepage": "https://github.com/reijosirila/loxone-mcp-server#readme"
}
